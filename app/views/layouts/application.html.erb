<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
      <% end %>

      <% if flash[:alert] %>
        <p class="alert"><%= flash[:alert] %></p>
      <% end %>

      <div class="home">
        <%= link_to("Home", products_path) %>
      </div>

      <div class="add-new-product">
        <%= link_to("Add new product", new_product_path) %>
      </div>
    </nav>

    <p class="userinfo">
      <% if current_user %>
        Signed in as <%= current_user.email %>, <%= link_to "Log out", sessions_path, method: :delete %>
      <% else %>
        <%= link_to "Log in", new_sessions_path %> or <%= link_to "Sign up", new_users_path %>
      <% end %>
    </p>

    <%= yield %>

  </body>
</html>
